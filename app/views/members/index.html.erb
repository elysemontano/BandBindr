<h1>Invite Members</h1>

<%= form_with url: invite_organization_members_path do |form| %>
    <%= form.text_field :email, placeholder: 'Email' %>
    <%= form.submit 'Invite' %>
<% end %>

<h1>Members</h1>

<% @members.each do |member| %>
    <%= member.user.email %>
    <%= member.roles %>
<% end %>