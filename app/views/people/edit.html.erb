<div class="not-prose mt-10 relative overflow-x-auto">
  <h3 class="text-center text-[#0097B2] text-4xl font-bold mr-4 mb-10">Edit <%= @person.first_name %></h3>


  <%= form_with model: [@current_organization, @person], method: :patch, url: organization_person_path(@current_organization, @person), class: "max-w-sm mx-auto" do |form| %>
    <div class="mb-5">
      <%= form.label :first_name, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :first_name, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
    </div>
    <div class="mb-5">
      <%= form.label :last_name, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :last_name, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
    </div>

    <div class="flex">
      <%= form.submit "Submit", class:"py-2.5 px-5 me-2 mb-2 text-sm font-medium text-white focus:outline-none bg-gray-500 rounded-lg border border-gray-200 hover:bg-gray-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-whitedark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700" %>
    <% end %>

    <%= form_with(model: @person, url: organization_person_path(@current_organization, @person), method: :delete, data: { confirm: 'Are you sure you want to delete this person?' }) do |form| %>
      <%= form.submit "Delete #{@person.first_name}", class: 'btn btn-danger mx-2 text-white bg-red-500 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-500 dark:hover:bg-red-700 dark:focus:ring-red-800' %>
    <% end %>
  </div>
</div>


