<div class="not-prose mx-10 mt-10 relative overflow-x-auto shadow-lg sm:rounded-lg mb-20">
    <div class="flex flex-column sm:flex-row flex-wrap space-y-4 sm:space-y-0 items-center justify-between pb-4">
      <div class="pl-4 flex items-center">
        <h1 class="text-[#0097B2] text-4xl font-bold mr-4">
            <%= @tag.tag_word.capitalize %>
        </h1>

  <!-- Edit person -->
        <button data-popover-target="popover-animation-edit" data-popover-placement="right" type="button" class="text-white  focus:ring-4 focus:outline-none font-medium rounded-lg text-sm mx-2 text-center">
          <%= link_to(edit_organization_tag_path(@current_organization), class: "m-5") do %>
            <svg class="w-8 h-8 text-gray-500 dark:text-white hover:bg-gray-200 rounded hover:border p-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z"/>
            </svg>
          <% end %>
        </button>
        <div data-popover id="popover-animation-edit" role="tooltip" class="absolute invisible inline-block w-1/10 text-sm text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg shadow-sm opacity-0 dark:text-gray-400 dark:border-gray-600 dark:bg-gray-800">
            <div class="px-3 py-2">
                <p>Edit <%= @tag.tag_word %></p>
            </div>
            <div data-popper-arrow></div>
        </div>


       
      </div>
        <label for="table-search" class="sr-only">Search</label>
        <div class="relative mr-4">
            <div class="absolute inset-y-0 left-0 rtl:inset-r-0 rtl:right-0 flex items-center ps-3 pointer-events-none">
                <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path></svg>
            </div>
            <input type="text" id="table-search" class="block p-2 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg w-80 bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Search for song">
        </div>
    </div>

    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Song
                </th>
                <th scope="col" class="py-3">
                </th>
            </tr>
        </thead>
        <tbody>
          <% @songs.each do |song_tag| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                <%= link_to organization_song_path(@current_organization, song_tag.song) do %>
                  <span class="block w-full h-full">
                    <%= song_tag.song.song_name %>
                  </span>
                <% end %>
              </td>
              <td class="py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                <%= button_to organization_song_song_tag_path(@current_organization, song_tag.song, song_tag), method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <svg class="w-8 h-8 text-gray-500 dark:text-white border rounded-lg p-1 hover:bg-red-500 hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"/>
                  </svg>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
    </table>
</div>
